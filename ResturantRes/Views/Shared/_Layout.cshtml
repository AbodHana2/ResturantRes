<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ResturantRes</title>
    <link rel="stylesheet" href="/assets/css/vendor.bundle.css?ver=141">
    <link rel="stylesheet" href="/assets/css/style.css?ver=141">
    <link rel="stylesheet" href="/assets/css/theme.css?ver=141">
   
    <title>Graduation Project - @ViewBag.Title</title>
    
</head>
<body>
    <header class="is-sticky is-shrink is-boxed header-s1" id="header">
        <div class="header-box">
            <div class="header-main">
                <div class="header-wrap">

                    <!-- Logo  -->
                    <div class="header-logo logo">
                        <a href="./" class="logo-link">
                            <img class="logo-light" src="/assets/images/uni.png" srcset="/content/images/uni.png 2x" alt="logo">
                            <img class="logo-dark" src="/assets/images/uni.png" srcset="/content/images/uni.png 2x" alt="logo">
                        </a>
                    </div>

                    <!-- Menu Toogle -->
                    <div class="header-nav-toggle">
                         <a href="#" class="navbar-toggle" data-menu-toggle="header-menu">
                            <div class="toggle-line">
                                <span></span>
                            </div>
                        </a>
                    </div>
                    <!-- Menu Toogle -->
                    <!-- Menu -->
                    <div class="header-navbar">
                        <nav class="header-menu" id="header-menu">
                            <ul class="menu">
                                <li class="menu-item"><a class="menu-link nav-link" href="~/">Home</a></li>
                            </ul>
                            <ul class="menu-btns">
                                 <li><a href="~/Customer/create" class="btn btn-sm">Book now</a></li>
                            </ul>
                            <ul class="menu-btns">
                                 <li><a href="~/Customer/Index" class="btn btn-sm">Reservations</a></li>
                            </ul>
                        </nav>
                    </div><!-- .header-navbar -->

                </div>
            </div> 
        </div>
    </header>
    <br>
    <br>
    <br>
    <br>
    <br>
    <div>
        @RenderBody()
     </div>

    <footer class="border-top footer text-muted" style="padding-top:15px" >
        <div class="container">
            &copy; 2022 - Resturant Res - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
     <!-- JavaScript -->
    <script src="/assets/js/jquery.bundle.js?ver=141"></script>
    <script src="/assets/js/jquery.bundle.js?ver=141"></script>
    <script src="/assets/js/scripts.js?ver=141"></script>
 
    @*@RenderSection("scripts", required: false)*@
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
