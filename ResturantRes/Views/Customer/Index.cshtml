@model IEnumerable<Customer>
@{
    ViewData["Title"] = "Reservation";
}



@if (TempData["Success"] != null)
{
  <h2>@TempData["Success"]</h2>  
}
<div class="container">
<div class="container p-3">
  <div class="row pt-4">
    <div class="col-6">
      <h2 class="text-primary">Reservations List of our Customer </h2>
    </div>
     <div class="col-6 text-end">
          <a asp-controller="Customer" asp-action="Create" class="btn btn-primary">            
              Create New Reservation
          </a>
     </div>
  </div>
</div>
<br />
<table class="table table-bordered table-striped" style="width : 100%">
    <thead>
        <tr>
            <th>
                Customer Name
            </th>
            <th>
                Reservation Date
            </th>
            <th>
                Phone Number
            </th>
            <th>
                Mail Type
            </th>  
        </tr>
    </thead>
        <tbody>
            @foreach(var c in Model)
            {
                <tr>
                    <td width="50%">
                        @c.FullName
                    </td>
                     <td width="50%">
                        @c.ReservationDate
                    </td>
                     <td>
                        @c.PhoneNumber
                    </td>
                     <td width="50%">
                        @c.mailType
                    </td>             
                    <td>
                        <div>
                            <a asp-controller="Customer" asp-action="Edit" asp-route-id="@c.Id"> Edit</a>  ||                   
                            <a asp-controller="Customer" asp-action="Delete" asp-route-id="@c.Id"> Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    
</table>
</div>